<div class="space">
  <div class="container">
    <div class="myjumbotron text-center">
        <h1 class="page-header">All Blogs</h1>
        <p>Create Your Own BLog</p>
        <p><a href="/blogs/new"><button class="mybtn btn-lg mybtn-gradient ">Add Your Blog</button></a></p>
    </div>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
      <% blogs.forEach(function(blog){%>
        <div class="col-lg-6 col-md-12">
          <div class="mythumbnail">
            <img src="<%= blog.image %>" class="img-rounded" width="400px" height="200px">
            <p><%= blog.created.toDateString() %> </p>
              <div class="caption">
                <h1><%= blog.title %></h1>
                <p><%- blog.body.substring(0, 100) %>...</p>
              </div>
              <p>
                <a href="/blogs/<%=blog._id%>"><button class="mybtn mybtn-info mybtn-lg">Read More</button></a>
              </p>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</div>



